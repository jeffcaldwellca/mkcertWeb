# Example Email Configuration for Corporate SMTP Server

# 1. Enable email notifications
EMAIL_NOTIFICATIONS_ENABLED=true

# 2. Corporate SMTP Configuration
SMTP_HOST=mail.company.com         # Your company's SMTP server
SMTP_PORT=587                      # Standard TLS port (or 25 for unencrypted, 465 for SSL)
SMTP_SECURE=false                  # Set to true if using port 465 (SSL)
SMTP_USER=mkcert-service@company.com  # Service account email
SMTP_PASSWORD=service-account-password
SMTP_TLS_REJECT_UNAUTHORIZED=false # Set to false for self-signed corporate certificates

# 3. Email settings
EMAIL_FROM=mkcert-web-ui@company.com
EMAIL_TO=sysadmin@company.com,devops@company.com,security-team@company.com
EMAIL_SUBJECT=ðŸ”’ Certificate Expiry Alert - Internal mkcert Service

# 4. Certificate Monitoring
CERT_MONITORING_ENABLED=true
CERT_CHECK_INTERVAL=0 */6 * * *    # Every 6 hours (more frequent for enterprise)
CERT_WARNING_DAYS=60               # Enterprise may want longer warning periods
CERT_CRITICAL_DAYS=21              # 3 weeks for critical alerts
CERT_MONITOR_UPLOADED=true

# Common Corporate SMTP Settings:
# 
# Microsoft Exchange:
# - SMTP_HOST=mail.company.com or exchange.company.com
# - SMTP_PORT=587 (usually)
# - SMTP_SECURE=false
# - May require domain authentication (DOMAIN\username)
#
# Postfix/Sendmail:
# - SMTP_HOST=smtp.company.com
# - SMTP_PORT=25 (internal) or 587 (authenticated)
# - Authentication may not be required for internal services
#
# For internal certificates or self-signed SMTP:
# - Set SMTP_TLS_REJECT_UNAUTHORIZED=false
